generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id            Int            @id @default(autoincrement())
  name          String
  email         String         @unique
  password      String
  classroomId   Int
  classroom     Classroom      @relation(fields: [classroomId], references: [id])
  examResponses ExamResponse[]
}

model Teacher {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Classroom {
  id            Int            @id @default(autoincrement())
  name          String
  students      Student[]
  exams         Exam[]
  examResponses ExamResponse[]
}

model Exam {
  id            Int            @id @default(autoincrement())
  title         String
  description   String?
  examDate      DateTime
  classroomId   Int
  classroom     Classroom      @relation(fields: [classroomId], references: [id])
  questions     Json
  examResponses ExamResponse[]
}

model ExamResponse {
  id          Int       @id @default(autoincrement())
  studentId   Int
  student     Student   @relation(fields: [studentId], references: [id])
  examId      Int
  exam        Exam      @relation(fields: [examId], references: [id])
  classroomId Int
  classroom   Classroom @relation(fields: [classroomId], references: [id])
  responses   Json
  submittedAt DateTime  @default(now())
}
